---
interface Oferta {
  id: number;
  producto: string;
  precio: number;
}

const ofertas: Oferta[] = [
  { id: 1, producto: "Hamburguesa Clásica", precio: 5.99 },
  { id: 2, producto: "Pizza Margherita", precio: 8.99 },
  { id: 3, producto: "Ensalada César", precio: 4.99 },
  { id: 4, producto: "Pasta Alfredo", precio: 7.99 },
  { id: 5, producto: "Refresco Grande", precio: 1.99 },
  { id: 6, producto: "Helado de Vainilla", precio: 3.99 },
];
---

<div class="min-h-screen flex items-center justify-center bg-gray-100 p-4">
  <div class="w-full max-w-md transform -rotate-3 transition-transform hover:rotate-0 duration-300">
    <div class="bg-yellow-100 rounded-lg shadow-xl p-6 border-4 border-yellow-300">
      <h1 class="text-3xl font-bold text-center mb-6 text-yellow-800">Ofertas del Día</h1>
      <ul class="space-y-4">
        {ofertas.map((oferta) => (
          <li value={oferta.id} class="flex justify-between items-center border-b border-yellow-200 pb-2">
            <span class="text-lg font-medium text-gray-800">{oferta.producto}</span>
            <span class="text-xl font-bold text-green-600">${oferta.precio.toFixed(2)}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</div>